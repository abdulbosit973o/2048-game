<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="Purchases"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel" />

    <androidx.cardview.widget.CardView
        android:id="@+id/disable_ads"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="56dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintVertical_bias="0.6"
        app:cardBackgroundColor="@color/item_background"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable Ads"
        android:elevation="2dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="@+id/disable_ads"
        app:layout_constraintEnd_toEndOf="@+id/disable_ads"
        app:layout_constraintStart_toStartOf="@+id/disable_ads"
        app:layout_constraintTop_toTopOf="@+id/disable_ads" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_main_background"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:text="How to play"
        android:textSize="28sp"
        android:elevation="5dp"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:background="@drawable/bg_task5"
        />

    <View
        android:id="@+id/skip"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="30dp"
        android:layout_width="167dp"
        android:layout_height="56dp"
        android:background="@drawable/task5_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/worm_dots_indicator"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dotsColor="@color/white"
        app:dotsStrokeColor="@color/white"
        app:dotsCornerRadius="7dp"
        app:dotsSize="14dp"
        app:dotsSpacing="4dp"
        app:dotsStrokeWidth="2dp"
        app:layout_constraintVertical_bias="1"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@id/viewPager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <View
        android:id="@+id/next"
        android:background="@drawable/task5_bg_1"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="30dp"
        android:layout_width="167dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/close"
        android:background="@drawable/task5_bg_1"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginBottom="80dp"
        android:layout_width="167dp"
        android:visibility="gone"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skiptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Skip"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="@id/skip"
        app:layout_constraintEnd_toEndOf="@id/skip"
        app:layout_constraintStart_toStartOf="@id/skip"
        app:layout_constraintTop_toTopOf="@id/skip"
        />
    <TextView
        android:id="@+id/nexttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Next"
        android:textColor="@color/container_color"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="@id/next"
        app:layout_constraintEnd_toEndOf="@id/next"
        app:layout_constraintStart_toStartOf="@id/next"
        app:layout_constraintTop_toTopOf="@id/next"
        />

    <TextView
        android:id="@+id/closetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Close"
        android:textColor="@color/container_color"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="@id/close"
        app:layout_constraintEnd_toEndOf="@id/close"
        app:layout_constraintStart_toStartOf="@id/close"
        app:layout_constraintTop_toTopOf="@id/close"
        />


</androidx.constraintlayout.widget.ConstraintLayout>